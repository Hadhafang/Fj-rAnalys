    def SunAngle(self)
         for Mean_Sun_Angle in self.root.iter('Mean_Sun_Angle'):
            self.result += '\n' + ('Mean Zenith Angle: ') + Mean_Sun_Angle.find('ZENITH_ANGLE').text
            self.result += '\n' + ('Mean Azimuth Angle: ') + Mean_Sun_Angle.find('AZIMUTH_ANGLE').text
    
