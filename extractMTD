class extractMTD:
    def __init__(self, dir, metadat):
        self.dir = os.chdir(dir)
        self.root = ET.parse(metadata).getroot()
        self.result = ''
    
    def TimeCloud(self)
        for Product_Info in self.root.iter('Product_Info'): # Finds product info
            PI = Product_Info.find('PRODUCT_URI').text #Product name
            PST = Product_Info.find("PRODUCT_START_TIME").text #Start time
            PET = Product_Info.find("PRODUCT_STOP_TIME").text #End time or stop time
            GT = Product_Info.find("GENERATION_TIME").text   # Gin and Tonic
            self.result += "\n Product Name: " +PI +  "\n Product start time: " + PST + "\n Product end time: " + PET +"\n Generation time: " + GT
